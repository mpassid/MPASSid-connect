[Unit]
Description=Gunicorn for MPASS-Connector
After=network.target remote-fs.target nss-lookup.target

[Service]
WorkingDirectory={{ secure.app_root }}/mpass-connect
Type=simple
User=educloud
Group=root
ExecStart={{ secure.app_root }}/mpass-connect/run-service.sh
ExecReload=/bin/pkill -HUP -P ${MAINPID]
ExecStop=/bin/pkill -TERM -P  ${MAINPID}

[Install]
WantedBy=multi-user.target

